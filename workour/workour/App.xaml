<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="workour.App">
	<Application.Resources>
	    <ResourceDictionary>
			<Color x:Key="ThemeBackgroundColorColor">#205bae</Color>	
			  <x:Double x:Key="LoginButtonHeightIos">40</x:Double>
              <x:Double x:Key="LoginButtonHeightDroid">50</x:Double>

				<Style x:Key="sansSemibold" TargetType="Label">
				<Setter Property="FontFamily" Value="SourceSansPro-Semibold"/>
			</Style>

			<Style x:Key="sansBold" TargetType="Label">
				<Setter Property="FontFamily" Value="SourceSansPro-Bold"/>
			</Style>

			<Style x:Key="HelveticaNeueregular" TargetType="Label">
				<Setter Property="FontFamily" Value="HelveticaNeue-Regular"/>
			</Style>
			
		</ResourceDictionary>
	</Application.Resources>
</Application>
